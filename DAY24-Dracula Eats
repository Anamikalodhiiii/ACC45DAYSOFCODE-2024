#include <iostream>
using namespace std;

int main() {
    int T;
    cin >> T;
    while (T--) {
        int N;
        cin >> N;

        int tuesdays = 0;

        for (int day = 1; day <= N; ++day) {
            if ((day - 1) % 7 == 1) {
                tuesdays++;
            }
        }

        cout << tuesdays << endl;
    }
    return 0;
}
