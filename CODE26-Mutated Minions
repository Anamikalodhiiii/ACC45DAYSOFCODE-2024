#include <iostream>
using namespace std;

int main() {
    int t;  
    cin >> t;

    while (t--) {
        int n, k;  
        cin >> n >> k;

        int wolverineCount = 0;  

        for (int i = 0; i < n; i++) {
            int characteristic;
            cin >> characteristic;

            if ((characteristic + k) % 7 == 0) {
                wolverineCount++;
            }
        }

        cout << wolverineCount << endl;
    }

return 0;
}
